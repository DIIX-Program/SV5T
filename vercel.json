{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "env": {
    "VITE_API_URL": "@vite_api_url",
    "MONGODB_URI": "@mongodb_uri"
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "http://localhost:5001/api/:path*"
    }
  ],
  "functions": {
    "api/auth/*.js": {
      "memory": 512,
      "maxDuration": 30
    }
  }
}
